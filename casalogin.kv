<CasaLogin>:
    name:"casaLogin"
    MDSliverAppbar:
        md_bg_color:"#323b4e"
        radius: [20,20,0,0]
        MDSliverAppbarHeader:
            MDRelativeLayout:
                FitImage:
                    source: "assets/car-bg.png"
                MDCard:
                    md_bg_color:"white"
                    opacity:.8
                FitImage:
                    source: "assets/ckure.png"
                    pos_hint: {"center_x": .45, "center_y": .5}
                    size_hint: None, None
                    size: "300dp", "200dp"
        MDSliverAppbarContent:
            id: content
            md_bg_color:"#323b4e"
            orientation: "vertical"
            padding: "12dp"
            spacing: "12dp"
            adaptive_height: True
            MDBoxLayout:
                md_bg_color:"#323b4e"
                orientation: "vertical"
                adaptive_height: True
                spacing: "6dp"
                padding: "12dp"
                pos_hint: {"center_y": .6}
                MDTextField:
                    id: email
                    hint_text: "Email"
                    helper_text: "This field is required"
                    helper_text_mode: "on_focus"
                    hint_text_color_normal:"white"
                    hint_text_color_focus:"white"
                    # validator: "email"
                    line_color_normal: "white"
                    line_color_focus: "white"
                    text_color_normal:"white"
                    helper_text_color_focus: "white"
                MDTextField:
                    id: password
                    hint_text: "Password"
                    password: True
                    helper_text: "This field is required"
                    helper_text_mode: "on_focus"
                    hint_text_color_normal:"white"
                    hint_text_color_focus:"white"
                    line_color_normal: "white"
                    text_color_normal:"white"
                    password_mask:'â€¢'
                    helper_text_color_focus: "white"
                MDRectangleFlatIconButton:
                    icon: "eye-off"
                    text: "Show Password"
                    line_color: 0,0,0,0
                    icon_theme_color:"Custom"
                    icon_color:"white"
                    theme_text_color:"Custom"
                    text_color:"white"
                    on_release: 
                        self.icon = "eye" if self.icon == "eye-off" else "eye-off"
                        password.password = False if password.password is True else True
            MDRaisedButton:
                pos_hint_y:.9
                font_name: 'fonts/Oswald-Regular.ttf'
                text: "Login"
                font_size:"20dp"
                mode: "rectangle"
                elevation:0
                md_bg_color: "#0096c7"
                size_hint_x:1
                on_press: root.verify_admin()
                